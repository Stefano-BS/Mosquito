<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridlayoutnotiziainlista"
    android:clickable="true"
    style="@style/txt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="6dp"
        android:paddingHorizontal="10dp">
        <TextView
            style="@style/txt"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="Titolo della notizia, può essere molto lungo e pertanto andare a capo"
            android:id="@+id/titolonotizia"
            android:textSize="16sp"/>
        <TextView
            style="@style/txtsubtle"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fonte, anche questa può essere molto lunga"
            android:id="@+id/nomefontenotizia"
            android:textSize="10sp"/>
        <TextView
            style="@style/txtsubtle"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data, breve"
            android:textAlignment="viewEnd"
            android:id="@+id/datanotizia"
            android:textSize="10sp"/>
    </GridLayout>
</androidx.cardview.widget.CardView>