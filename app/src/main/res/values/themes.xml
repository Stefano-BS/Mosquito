<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mosquito" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verdechiaro</item>
        <item name="colorPrimaryVariant">@color/verde</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottoni" xmlns:android="http://schemas.android.com/apk/res/android">
        <item name ="android:textSize">16sp</item>
        <item name ="android:elevation">100dp</item>
        <item name ="android:backgroundTint">@color/btn</item>
        <item name ="android:background">@color/btn</item>
        <item name ="android:textColor">@color/btntext</item>
        <!--item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item-->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="btnelimina">
        <item name="android:backgroundTint">@color/rossochiaroelimina</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="txt">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="txtsubtle">
        <item name="android:textColor">@color/dgray</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Theme.Mosquito.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mosquito.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.Mosquito.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>